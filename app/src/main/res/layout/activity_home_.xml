<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#FFFFFF"
            android:fitsSystemWindows="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:elevation="3dp"
                android:background="#fff"
                android:orientation="horizontal">


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="13dp"
                        android:scaleType="centerInside"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:tint="#787c86"
                        android:src="@drawable/crown" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Queen"
                    android:textStyle="bold"
                    android:textColor="#787c86"
                    android:textSize="24dp"
                    />


                <LinearLayout
                    android:id="@+id/search"
                    android:clickable="true"
                    android:layout_width="56dp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="56dp"
                    android:focusable="true"
                    tools:ignore="NewApi">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:tint="#787c86"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:background="@null"
                        android:src="@drawable/search" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bell"
                    android:clickable="true"
                    android:layout_width="56dp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="56dp"
                    android:focusable="true"
                    tools:ignore="NewApi">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:tint="#787c86"
                        android:scaleType="centerInside"
                        android:background="@null"
                        android:src="@drawable/bell" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/wishlist"
                    android:clickable="true"
                    android:layout_width="56dp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="56dp"
                    android:focusable="true"
                    tools:ignore="NewApi">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:tint="#787c86"
                        android:scaleType="centerInside"
                        android:background="@null"
                        android:src="@drawable/wish" />

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.AppBarLayout
                        android:id="@+id/appBarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.CollapsingToolbarLayout
                            android:id="@+id/collapsing_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:fitsSystemWindows="true"
                            app:layout_scrollFlags="scroll|enterAlways"
                            >


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/categories"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="6dp"
                                android:descendantFocusability="blocksDescendants"
                                android:background="#fff"
                                android:clipToPadding="false"
                                android:fillViewport="true"/>


                        </android.support.design.widget.CollapsingToolbarLayout>
                    </android.support.design.widget.AppBarLayout>

                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/scrollView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:background="#f0f4f8"
                        android:descendantFocusability="blocksDescendants"
                        android:fillViewport="true"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                        app:layout_constraintVertical_bias="0.0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f0f4f8"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/image1"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="360dp"
                                android:layout_marginTop="15dp"
                                android:background="#e0f7fa"/>


                            <ImageView
                                android:id="@+id/image4"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="175dp"
                                android:layout_marginTop="15dp"
                                android:background="#e0f7fa"/>



                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/horzontaldeals"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginTop="15dp"
                                android:descendantFocusability="blocksDescendants"
                                android:background="#f0f4f8"
                                android:clipToPadding="false"
                                android:fillViewport="true"/>



                            <ImageView
                                android:id="@+id/image2"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="360dp"
                                android:layout_marginTop="15dp"
                                android:background="#e0f7fa"/>


                            <ImageView
                                android:id="@+id/image3"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="15dp"
                                android:background="#e0f7fa"/>



                            <ImageView
                                android:id="@+id/image5"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="360dp"
                                android:layout_marginTop="15dp"
                                android:background="#e0f7fa"/>




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:visibility="gone"
                                android:background="#fff"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="12dp"
                                    android:textColor="#343438"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:text="TRENDING NOW"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#D4DBE3"
                                    android:textSize="14dp"
                                    android:text="See All  "/>

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:tint="#D4DBE3"
                                    android:layout_marginRight="12dp"
                                    android:background="#FFFFFF"
                                    android:src="@drawable/forw" />

                            </LinearLayout>


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/trendingrecycle"
                                android:layout_width="match_parent"
                                android:layout_height="287dp"
                                android:visibility="gone"
                                android:descendantFocusability="blocksDescendants"
                                android:background="#FFFFFF"
                                android:clipToPadding="false"
                                android:fillViewport="true"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="#ffffff"/>






                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="#fff"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="12dp"
                                    android:textColor="#343438"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:text="BRAND IN FOCUS"/>


                            </LinearLayout>


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/brandrecycle"
                                android:layout_width="match_parent"
                                android:layout_height="380dp"
                                android:descendantFocusability="blocksDescendants"
                                android:background="#FFFFFF"
                                android:clipToPadding="false"
                                android:fillViewport="true"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="#ffffff"/>






                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="#fff"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="12dp"
                                    android:textColor="#343438"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:text="JUST IN"/>

                            </LinearLayout>


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/justinrecycle"
                                android:layout_width="match_parent"
                                android:layout_height="380dp"
                                android:descendantFocusability="blocksDescendants"
                                android:background="#FFFFFF"
                                android:clipToPadding="false"
                                android:fillViewport="true"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="#ffffff"/>






                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="#fff"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="12dp"
                                    android:textColor="#343438"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:text="EDITOR'S PICKS - APPAREL"/>

                            </LinearLayout>


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/editorrecycle"
                                android:layout_width="match_parent"
                                android:layout_height="380dp"
                                android:descendantFocusability="blocksDescendants"
                                android:background="#FFFFFF"
                                android:clipToPadding="false"
                                android:fillViewport="true"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="#ffffff"/>





                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="#fff"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="12dp"
                                    android:textColor="#343438"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:text="THEME STORE"/>

                            </LinearLayout>


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/themerecycle"
                                android:layout_width="match_parent"
                                android:layout_height="380dp"
                                android:descendantFocusability="blocksDescendants"
                                android:background="#FFFFFF"
                                android:clipToPadding="false"
                                android:fillViewport="true"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="#ffffff"/>
                            <android.support.v4.widget.Space
                                android:layout_width="match_parent"
                                android:layout_height="50dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <View
                                    android:layout_width="50dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="#343438"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="&quot;In order to be irreplaceable one must always be different&quot;"
                                android:textColor="#343438"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textSize="12dp"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Coco Chanel"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="70dp"
                                    android:textColor="#C0C0C0"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="12dp"/>

                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v4.widget.NestedScrollView>



                    <android.support.design.widget.BottomNavigationView
                        android:id="@+id/navigationView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:labelVisibilityMode="labeled"
                        android:background="#fff"
                        android:layout_gravity="bottom"
                        android:elevation="4dp"
                        app:itemTextColor="@drawable/bottom_navigation_selector"
                        app:itemIconTint="@drawable/bottom_navigation_selector"
                        app:menu="@xml/bottom_navigation"/>

                </android.support.design.widget.CoordinatorLayout>

            </LinearLayout>


        </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

